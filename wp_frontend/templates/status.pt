<!DOCTYPE html>

<html lang="de"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">
  <tal:block metal:fill-slot="headers">
    <link rel="stylesheet"
	  href="${request.static_path('wp_frontend:static/wp.css')}"
	  type="text/css" />
  </tal:block>
  <tal:block metal:fill-slot="title">
    Status
  </tal:block>
  <tal:block metal:fill-slot="content">
    <aside class="leftCol">
      <div class="mod complex flow">
	<b class="top"><b class="tl"></b><b class="tr"></b></b>
	<div class="inner">
	  <div class="hd info">Statusseite</div>
	  <div class="bd">
	    <ul>
	      <li>
		<a href="${request.route_path('view_status')}">Allgemein</a>
	      </li>
	      <li>
		<a href="${request.route_path('view_backup')}">Backup</a>
	      </li>
	    </ul>
	  </div>
	</div>
	<b class="bottom"><b class="bl"></b><b class="br"></b></b>
      </div>
    </aside>
    <section class="main">
      <div class="mod complex flow">
	<b class="top"><b class="tl"></b><b class="tr"></b></b>
	<div class="inner">
	  <div class="bd">

	    <tal:block metal:use-macro="blocks.macros['block-with-header']">
	      <tal:block metal:fill-slot="header">Uptime</tal:block>
	      <tal:block metal:fill-slot="body">
		<ul>
		  <li>${uptime}</li>
		</ul>
	      </tal:block>
	    </tal:block>

	    <div class="mod complex flow">
	      <b class="top"><b class="tl"></b><b class="tr"></b></b>
	      <div class="hd info">Disk Usage</div>
	      <div class="bd data spec">
		<table class="txtR">
		  <tr>
		    <th tal:repeat="header df[0]">${header}</th>
		  </tr>
		  <tr tal:repeat="line df[1:]">
		    <td tal:repeat="item line">${item}</td>
		  </tr>
		</table>
	      </div>
	      <b class="bottom"><b class="bl"></b><b class="br"></b></b>
	    </div>

	  </div>
	</div>
	<b class="bottom"><b class="bl"></b><b class="br"></b></b>
      </div>

    </section>
  </tal:block>
</html>
